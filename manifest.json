{
	"manifest_version": 3,
	"name": "ChatWork Threader",
	"version": "1.0.0",
	"description": "ChatWorkのメッセージをスレッド形式でツリー表示する拡張機能",
	"permissions": [
		"activeTab",
		"scripting"
	],
	"host_permissions": [
		"https://*.chatwork.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://*.chatwork.com/*"
			],
			"js": [
				"content.js"
			],
			"css": [
				"styles.css"
			],
			"run_at": "document_idle"
		}
	],
	"action": {
		"default_popup": "popup.html"
	},
	"icons": {
		"128": "icon128.png"
	}
}